public class CountNumberOf {

    public int countOcurrences(String needle, String haystack) {

        return haystack.split(needle, -1).length - 1;
    }

    public static void main(String[] args) {
        CountNumberOf test = new CountNumberOf();
        String testString = "da";
        String testString2 = "daaadaadada";
        System.out.println(test.countOcurrences(testString, testString2));

    }

}
