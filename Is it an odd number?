public class OddNumber {

    public boolean isOdd(int n) {

        if (n % 2 == 0)
            return false;

        else
            return true;

    }

    public boolean sexyEven(int n) {
        return n % 2 == 0;
    }

    public boolean isOdd2(int n) {

        return n % 2 != 0;
    }

    public static void main(String[] args) {

        OddNumber test1 = new OddNumber();
        System.out.println(test1.isOdd(595));

        OddNumber test2 = new OddNumber();
        System.out.println(test2.isOdd2(222));

    }

}
